<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.itmo.web_laba_2.servlets.ControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexJSP</servlet-name>
        <jsp-file>/templates/index.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>IndexJSP</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShotResultJSP</servlet-name>
        <jsp-file>/templates/shot_result.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShotResultJSP</servlet-name>
        <url-pattern>/shot_result.jsp</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>com.itmo.web_laba_2.servlets.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
</web-app>